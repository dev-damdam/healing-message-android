<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        layout="@layout/main_actionbar"
        android:id="@+id/main_actionbar"
        />

    <TextView
        android:id="@+id/textview_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="02"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_month"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_actionbar" />

    <TextView
        android:id="@+id/textview_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="2022"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_year"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_month" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_view"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16.5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_prev_month" />

    <Button
        android:id="@+id/button_prev_month"
        android:layout_width="7dp"
        android:layout_height="11.4dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="21.5dp"
        android:background="@drawable/arrow_left"
        app:layout_constraintEnd_toStartOf="@+id/button_next_month"
        app:layout_constraintTop_toBottomOf="@+id/textview_year" />

    <Button
        android:id="@+id/button_next_month"
        android:layout_width="7dp"
        android:layout_height="11.4dp"
        android:layout_marginEnd="46.5dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_year"
        tools:layout_editor_absoluteY="76dp" />


</androidx.constraintlayout.widget.ConstraintLayout>