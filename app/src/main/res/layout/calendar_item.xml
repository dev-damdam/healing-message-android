<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="calendarInfo"
            type="com.example.healingmessage.calendar.CalendarInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/calendar_item_width"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgaeview_emotion"
            android:layout_width="@dimen/calendar_emotion_size"
            android:layout_height="@dimen/calendar_emotion_size"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_day"
            app:setEmotion="@{calendarInfo}" />

        <TextView
            android:id="@+id/textview_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textSize="@dimen/text_size_day"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="3dp"
            android:text="TextView"
            android:textColor="@color/black"
            app:setDate="@{calendarInfo}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>